<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <AssemblyName>Contrib.IdentityServer4.KubernetesStore</AssemblyName>
    <RootNamespace>Contrib.IdentityServer4.KubernetesStore</RootNamespace>
    <TargetFramework>netstandard2.0</TargetFramework>
    <OutputType>Library</OutputType>
    <OutputPath>..\..\artifacts\$(AssemblyName)\</OutputPath>
    <GenerateDocumentationFile>True</GenerateDocumentationFile>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <IncludeSource>True</IncludeSource>
    <TreatWarningsAsErrors>True</TreatWarningsAsErrors>
    <NoWarn>$(NoWarn);1591</NoWarn>
  </PropertyGroup>
  <PropertyGroup>
    <Authors>AXOOM GmbH</Authors>
    <Description>Configuration Store for IdentityServer4 using Kubernetes Custom Resources</Description>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="IdentityServer4" Version="2.2.0" />
    <PackageReference Include="KubeClient" Version="2.1.2" />
    <PackageReference Include="KubeClient.Extensions.CustomResources" Version="2.1.2" />
    <PackageReference Include="System.Reactive" Version="4.0.0" />
  </ItemGroup>
  <ItemGroup>
    <None Remove="IdentityClient.crd.yml" />
    <EmbeddedResource Include="IdentityClient.crd.yml" />
  </ItemGroup>
</Project>
