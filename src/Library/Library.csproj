<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <AssemblyName>Contrib.IdentityServer4.KubernetesStore</AssemblyName>
    <RootNamespace>Contrib.IdentityServer4.KubernetesStore</RootNamespace>
    <LangVersion>7.3</LangVersion>
    <TargetFramework>netstandard2.0</TargetFramework>
    <OutputType>Library</OutputType>
    <OutputPath>..\..\artifacts</OutputPath>
    <GenerateDocumentationFile>True</GenerateDocumentationFile>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <PublishRepositoryUrl>True</PublishRepositoryUrl>
    <AllowedOutputExtensionsInPackageBuildOutputFolder>$(AllowedOutputExtensionsInPackageBuildOutputFolder);.pdb</AllowedOutputExtensionsInPackageBuildOutputFolder>
    <TreatWarningsAsErrors>True</TreatWarningsAsErrors>
    <NoWarn>$(NoWarn);1591</NoWarn>
  </PropertyGroup>

  <PropertyGroup>
    <Authors>AXOOM GmbH</Authors>
    <Copyright>Copyright (c) AXOOM GmbH</Copyright>
    <Description>Provides custom stores for IdentityServer4 that fetch Clients, API Resources, etc. from Kubernetes Resources.</Description>
    <PackageProjectUrl>https://github.com/AXOOM/Contrib.IdentityServer4.KubernetesStore</PackageProjectUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageTags>Kubernetes;IdentityServer4;CustomResources</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="CompareNETObjects" Version="4.57.0" />
    <PackageReference Include="IdentityServer4" Version="2.3.0" />
    <PackageReference Include="Contrib.KubeClient.CustomResources" Version="0.12.0" />
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.0.0-beta-63127-02" PrivateAssets="All" />
  </ItemGroup>

</Project>
